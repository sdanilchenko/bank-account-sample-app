<div class="input-line grid">
  <fieldset>
    <legend>Bank Account</legend>

    <div class="input-line">
      <label class="grid__col grid__col--am grid__col--2-of-6">IBAN:</label>
      <div class="grid__col grid__col--4-of-6">
        <input type="text" name="iban-{{cid}}" value="{{{iban}}}" pattern="^[a-zA-Z]{2}[0-9]{2}[a-zA-Z0-9]{4}[0-9]{7}([a-zA-Z0-9]?){0,16}$"/>
        <span class="error hidden"></span>
      </div>
    </div>

    <div class="input-line">
      <label class="grid__col grid__col--am grid__col--2-of-6">BIC:</label>
      <div class="grid__col grid__col--4-of-6">
        <input type="text" name="bic-{{cid}}" value="{{{bic}}}" pattern="^[a-zA-Z]{4}[a-zA-Z]{2}[a-zA-Z0-9]{2}([a-zA-Z0-9]{3})?$"/>
        <span class="error hidden"></span>
      </div>
    </div>

    {{#if canBeDeleted}}
      <div class="grid__col grid__col--2-of-6 grid__col--push-4-of-6">
        <button type="button" name="delete" class="primary-btn">Delete</button>
      </div>
    {{/if}}
  </fieldset>
</div>
